@using Drippyz.Data.ViewModels
@model ShoppingCartVM


@{
    ViewData["Title"] = "Shopping cart";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Shopping Cart Summary </h2>
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Subtotal</th>
                    <th></th>

                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Total</td>
                        <td class="align-middle">@item.Product.Name</td>
                        <td class="align-middle">@item.Product.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Total*item.Product.Price).ToString("c"))</td>
                        <td class="align-middle"></td>
                        <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Product.Id">
                            <i class="bi bi-cart-dash"></i>
                        </a>
                        <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Product.Id">
                            <i class="bi bi-cart-plus"></i>
                        </a>
                    </tr>

                }



            </tbody>
            <tfoot>

                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>@Model.ShoppingCartTotal.ToString("c")</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Products" asp-action="Index">Add more Items</a>
            </div>
        </div>
    </div>

</div>